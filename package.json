{
    "workspaces": [
        "hooligan",
        "vis",
        "demo",
        "debugger"
    ],
    "type": "module",
    "scripts": {
        "fmt": "prettier . --write",
        "fmt:check": "prettier . --check",
        "lint": "eslint --fix",
        "lint:check": "eslint"
    },
    "devDependencies": {
        "prettier": "^3.6.2",
        "eslint": "^9.34.0",
        "typescript-eslint": "^8.41.0",
        "@eslint/js": "^9.34.0",
        "eslint-plugin-jsdoc": "^54.1.1",
        "eslint-plugin-tsdoc": "^0.4.0",
        "@eslint/compat": "^1.3.2"
    },
    "prettier": {
        "tabWidth": 4,
        "endOfLine": "lf",
        "printWidth": 100,
        "singleQuote": true,
        "arrowParens": "avoid",
        "vueIndentScriptAndStyle": true
    }
}
